<%- include("header"); -%>

<div class="box">
    <h1 id="heading"><%=listTitle%> <%=monthDay%> To Do List</h1>
</div>

<div class="box">
    <% for(let i=0;i<newListItem.length;i++) { %>
    <div class="item">
        <input type="checkbox">
        <p><%=newListItem[i]%></p>
    </div>
    <%  } %>
    <form action="/" method="post">
        <input type="text" name="newItem" placeholder="NewItem">
        <button type="submit" name="list" value=<%=listTitle%>>+</button>
    </form>
</div>
<%- include('footer'); -%>